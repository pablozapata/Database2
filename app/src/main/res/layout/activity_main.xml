<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.uni_s.ipvs.mcl.assignment5.MainActivity">


    <EditText
        android:id="@+id/temp_input"
        android:layout_width="156dp"
        android:layout_height="33dp"
        android:layout_marginLeft="59dp"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@+id/writevalue"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/suscribe_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        tools:layout_editor_absoluteY="206dp"
        app:layout_constraintLeft_toRightOf="@+id/suscribe"
        android:layout_marginLeft="27dp" />

    <Button
        android:id="@+id/suscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Suscribe to changes"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/readLast" />

    <Button
        android:id="@+id/readLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Read last value"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="-282dp"
        app:layout_constraintTop_toBottomOf="@+id/writevalue" />

    <Button
        android:id="@+id/connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to device"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="122dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/writevalue"
        app:layout_constraintVertical_bias="0.985" />

    <Button
        android:id="@+id/average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Get day average"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/suscribe" />

    <TextView
        android:id="@+id/average_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        tools:layout_editor_absoluteY="276dp"
        app:layout_constraintLeft_toRightOf="@+id/average"
        android:layout_marginLeft="59dp" />

    <TextView
        android:id="@+id/readLast_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        tools:layout_editor_absoluteY="139dp"
        app:layout_constraintLeft_toRightOf="@+id/readLast"
        android:layout_marginLeft="62dp" />

    <Button
        android:id="@+id/writevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write value"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="57dp" />


</android.support.constraint.ConstraintLayout>


